                            <button class="add-to-wishlist <%= isInWishlist ? 'in-wishlist' : '' %>" onclick='addtowishlist("<%=relatedProduct._id %>")'>
                                <i class="ti-heart"></i>
                            </button>
                        <% } %> 
                                        
              </div>

             
            </div>
             <% }); %>
          </div>
        </div>
      </div>
    </div>
  </section>



