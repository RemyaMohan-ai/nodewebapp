                    </ul>
            
                    <div class="divider mb-14"></div>
            
                    <% if (coupons && coupons.length > 0) { %>
                        <ul class="flex flex-column gap10">
                            <% coupons.forEach(coupon => { %>
                                <li class="coupon-item">
